{
  "name": "mull-recognition",
  "author": {
    "name": "Cristian Aldea",
    "url": "https://www.cristianaldea.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "scripts": {
    "clean": "recursive-delete 'dist'",
    "js": "rollup --config",
    "css": "node sass.js",
    "copy": "recursive-copy 'src/copy' 'dist'",
    "build-dirty": "npm-run-all -p js css copy",
    "build": "npm-run-all -s clean build-dirty",
    "watch-css": "chokidar './src/**/*.scss' -c 'npm run css'",
    "watch-js": "chokidar './src/**/*.js' -c 'npm run js'",
    "watch-copy": "chokidar './src/copy/**/*.*' -c 'npm run copy'",
    "watch": "npm-run-all -p build watch-css watch-js watch-copy",
    "serve": "browser-sync start --port 8080 --files 'dist' --server 'dist'"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "recursive-fs": "^2.1.0",
    "rollup": "^2.58.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.43.3",
    "chokidar-cli": "^3.0.0",
    "browser-sync": "^2.27.5"
  }
}
